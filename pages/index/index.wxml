 <scroll-view class="box" style="height:{{winHeight}}px" scroll-y="true" upper-threshold="50"
    lower-threshold="100" bindscrolltolower="showTip">

    <view class="list">
        <view class="list-box" wx:for="{{articles}}" wx:key="id">
            <navigator url="../detail/detail?id={{item.id}}">
                <view class="list-thumbnail">
                    <image class="list-img" src="{{item.imgUrl}}" />
                </view>
                <view class="list-main">
                    <view class="list-name">{{item.title}}</view>
                    <view class="list-description">{{item.pubDate}}</view>
                </view>
            </navigator>
        </view>

    </view>

    <view hidden="{{hidden}}" class="loading">
        <image src="/static/loading.gif" mode="aspectFill"/>
    </view>

</scroll-view>
