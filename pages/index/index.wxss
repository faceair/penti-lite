.list-box {
    position: relative;
    height: 120rpx;
    padding: 20rpx;
    border-bottom: 1rpx solid #F2F2F2;
}
.list-thumbnail {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
}
.list-img {
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
    border: 1rpx solid #F2F2F2;
}
.list-main {
    margin-left: 135rpx;
}
.list-name {
    font-size: 32rpx;
    color: #000;
}
.list-description {
    position: absolute;
    top: 110rpx;
    font-size: 24rpx;
    color: #999;
}
